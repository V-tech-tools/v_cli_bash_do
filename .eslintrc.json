{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": "eslint:recommended",

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "never"],
    "eol-last": ["warn"],
    "quotes": ["error", "single"],
    "avoidEscape": ["off", 2],
    "allowTemplateLiterals": ["off", 2]
  }
}

